<tiles-definitions>

    <definition name="structure" template="/WEB-INF/content/tiles/layout.jsp">
        <put-attribute name="title" value="Arizona"/>
        <put-attribute name="header" value="/WEB-INF/content/tiles/header.jsp"/>
        <put-attribute name="navigation" value="/WEB-INF/content/tiles/navigation.jsp"/>
        <put-attribute name="content" value="/WEB-INF/content/tiles/welcome.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/content/tiles/footer.jsp"/>
    </definition>
    
    <!-- Refatorar com wildcards
    <definition name="providers-{1}" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/providers/{1}.jsp"/>
    </definition>  -->
    
    <definition name="providers-index" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/providers/index.jsp"/>
    </definition>
    
    <definition name="providers-editNew" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/providers/editNew.jsp"/>
    </definition>
    
    <definition name="providers-edit" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/providers/edit.jsp"/>
    </definition>
    
    <definition name="providers-show" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/providers/show.jsp"/>
    </definition>
    
    <definition name="providers-deleteConfirm" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/providers/deleteConfirm.jsp"/>
    </definition>
    
    <definition name="products-index" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/products/index.jsp"/>
    </definition>
    
    <definition name="products-editNew" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/products/editNew.jsp"/>
    </definition>
    
    <definition name="products-edit" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/products/edit.jsp"/>
    </definition>
    
    <definition name="products-show" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/products/show.jsp"/>
    </definition>
    
    <definition name="products-deleteConfirm" extends="structure">
    	<put-attribute name="content" value="/WEB-INF/content/products/deleteConfirm.jsp"/>
    </definition>

</tiles-definitions>
